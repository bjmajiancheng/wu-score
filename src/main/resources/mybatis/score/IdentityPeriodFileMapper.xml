<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wutuobang.score.dao.IIdentityPeriodFileDao">

    <resultMap id="IdentityPeriodFile" type="com.wutuobang.score.model.IdentityPeriodFileModel">
        <result property="id" column="id"/>
        <result property="periodId" column="period_id"/>
        <result property="identityInfoId" column="identity_info_id"/>
        <result property="fileId" column="file_id"/>
        <result property="isCommit" column="is_commit"/>
        <result property="ctime" column="c_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,period_id ,identity_info_id ,file_id ,is_commit ,c_time 
	    ]]>
	</sql>
	
    <insert id="insert" >
    <![CDATA[
        INSERT INTO t_identity_period_file (
	        id  ,
	        period_id  ,
	        identity_info_id  ,
	        file_id  ,
	        is_commit  ,
	        c_time  
        ) VALUES (
        	t_identity_period_file_seq.nextval ,
        	#{periodId, jdbcType=INTEGER} ,
        	#{identityInfoId, jdbcType=INTEGER} ,
        	#{fileId, jdbcType=INTEGER} ,
        	#{isCommit, jdbcType=INTEGER} ,
        	#{ctime, jdbcType=TIMESTAMP} 
        )
    ]]>
    </insert>

    <update id="update" >
        UPDATE t_identity_period_file SET
	        <if test="periodId != null">period_id = #{periodId, jdbcType=INTEGER} ,</if>
	        <if test="identityInfoId != null">identity_info_id = #{identityInfoId, jdbcType=INTEGER} ,</if>
	        <if test="fileId != null">file_id = #{fileId, jdbcType=INTEGER} ,</if>
	        <if test="isCommit != null">is_commit = #{isCommit, jdbcType=INTEGER} ,</if>
	        <if test="ctime != null">c_time = #{ctime, jdbcType=TIMESTAMP} </if>
        WHERE 
	        id = #{id} 
    </update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM t_identity_period_file WHERE
        id = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="IdentityPeriodFile">
	    SELECT <include refid="columns"/>
	    <![CDATA[
	        FROM t_identity_period_file
	        WHERE 
		        id = #{id} 
	    ]]>
    </select>

	<sql id="findWhere">
	    <where>
	    </where>
	</sql>
	 
    <select id="findPageCount" resultType="int">
        SELECT count(*) FROM t_identity_period_file <include refid="findWhere"/>
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultMap="IdentityPeriodFile">
    	SELECT <include refid="columns"/> FROM t_identity_period_file
		<include refid="findWhere"/>
		<if test="sortColumns != null">
			ORDER BY ${sortColumns}
		</if>
    </select>

	
	<select id="find" resultMap="IdentityPeriodFile">
	    SELECT <include refid="columns"/> FROM t_identity_period_file
		<include refid="findWhere"/>
		<if test="sortColumns != null">
			ORDER BY ${sortColumns}
		</if>
    </select>
	
</mapper>

