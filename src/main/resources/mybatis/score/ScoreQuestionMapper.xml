<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wutuobang.score.dao.IScoreQuestionDao">

    <resultMap id="ScoreQuestion" type="com.wutuobang.score.model.ScoreQuestionModel">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="deptIds" column="dept_ids"/>
        <result property="scoreType" column="score_type"/>
        <result property="ctime" column="c_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,name ,dept_ids ,score_type ,c_time 
	    ]]>
	</sql>
	
    <insert id="insert" >
    <![CDATA[
        INSERT INTO t_score_question (
	        id  ,
	        name  ,
	        dept_ids  ,
	        score_type  ,
	        c_time  
        ) VALUES (
        	#{id, jdbcType=INTEGER} ,
        	#{name, jdbcType=VARCHAR} ,
        	#{deptIds, jdbcType=VARCHAR} ,
        	#{scoreType, jdbcType=INTEGER} ,
        	#{ctime, jdbcType=TIMESTAMP} 
        )
    ]]>
    </insert>

    <update id="update" >
        UPDATE t_score_question SET
	        <if test="name != null">name = #{name, jdbcType=VARCHAR} ,</if>
	        <if test="deptIds != null">dept_ids = #{deptIds, jdbcType=VARCHAR} ,</if>
	        <if test="scoreType != null">score_type = #{scoreType, jdbcType=INTEGER} ,</if>
	        <if test="ctime != null">c_time = #{ctime, jdbcType=TIMESTAMP} </if>
        WHERE 
	        id = #{id} 
    </update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM t_score_question WHERE
        id = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="ScoreQuestion">
	    SELECT <include refid="columns"/>
	    <![CDATA[
	        FROM t_score_question
	        WHERE 
		        id = #{id} 
	    ]]>
    </select>

	<sql id="findWhere">
	    <where>
					<if test="name != null">
						AND name = #{name}
					</if>
					<if test="deptIds != null">
						AND dept_ids = #{deptIds}
					</if>
	    </where>
	</sql>
	 
    <select id="findPageCount" resultType="int">
        SELECT count(*) FROM t_score_question <include refid="findWhere"/>
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultMap="ScoreQuestion">
    	SELECT <include refid="columns"/> FROM t_score_question
		<include refid="findWhere"/>
		<if test="sortColumns != null">
			ORDER BY ${sortColumns}
		</if>
    </select>

	
	<select id="find" resultMap="ScoreQuestion">
	    SELECT <include refid="columns"/> FROM t_score_question
		<include refid="findWhere"/>
		<if test="sortColumns != null">
			ORDER BY ${sortColumns}
		</if>
    </select>
	
</mapper>

