<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wutuobang.score.dao.IFakeRecordDao">

    <resultMap id="FakeRecord" type="com.wutuobang.score.model.FakeRecordModel">
        <result property="id" column="id"/>

        <result property="userName" column="user_name"/>
        <result property="idNumber" column="id_number"/>
        <result property="companyId" column="company_id"/>
        <result property="companyName" column="company_name"/>
        <result property="companyCode" column="company_code"/>
        <result property="batchCode" column="batch_code"/>
        <result property="fakeContent" column="fake_content"/>
        <result property="recordDate" column="record_date"/>
        <result property="createTime" column="create_time"/>
        <result property="addUser" column="add_user"/>
        <result property="indicatorRole" column="indicatorRole"/>


    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id,
        user_name,
        id_number,
        company_id,
        company_name,
        company_code,
        batch_code,
        fake_content,
        record_date,
        create_time,
        add_user,
        indicatorRole
	    ]]>
	</sql>

    <select id="getByIdNumber" resultMap="FakeRecord">
        select
        <include refid="columns"/>
        <![CDATA[
	        FROM t_fake_record
	        WHERE
		        ID_NUMBER = #{IdNumber}
	    ]]>
    </select>


</mapper>

